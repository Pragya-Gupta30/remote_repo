<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Hobby App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">My Hobbies</h1>
        <form action="/add-hobby" method="POST" class="mb-4">
            <div class="input-group">
                <input type="text" name="hobby" class="form-control" placeholder="Enter a new hobby" required>
                <button type="submit" class="btn btn-primary">Add Hobby</button>
            </div>
        </form>
        <ul class="list-group">
            <% if (typeof hobbies !== 'undefined' && hobbies.length > 0) { %>
                <% hobbies.forEach(function(hobby, index) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= hobby %>
                        <form action="/delete-hobby" method="POST" style="display:inline;">
                            <input type="hidden" name="index" value="<%= index %>">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No hobbies added yet.</li>
            <% } %>
        </ul>
    </div>
</body>
</html>