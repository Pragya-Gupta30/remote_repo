<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple E-Commerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">ShopEasy</a>
        </div>
    </nav>
    <div class="container">
        <h1 class="mb-4">Products</h1>
        <div class="row">
            <% const products = [
                { id: 1, name: "T-Shirt", price: 15, image: "https://via.placeholder.com/150" },
                { id: 2, name: "Sneakers", price: 50, image: "https://via.placeholder.com/150" },
                { id: 3, name: "Backpack", price: 30, image: "https://via.placeholder.com/150" }
            ]; %>
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">$<%= product.price %></p>
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>